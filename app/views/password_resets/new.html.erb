<% provide :title, t("password_reset.title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t "password_reset.title" %></h1>
    <%= simple_form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.input :email, class: "form-control" %>

      <%= f.button :submit, t("password_reset.btn_sub"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
