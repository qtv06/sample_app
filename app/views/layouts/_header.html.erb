<div class="container header">
  <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
      <%= link_to t("title_header"), root_path, class: "navbar-brand" %>
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><%= link_to t("static_pages.home.title_home"), root_path %></li>
        <li><%= link_to t("static_pages.help.title_help"), static_pages_help_path %></li>
        <li><%= link_to t("login"), login_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.title_user"), "#" %></li>
          <li class="dropdown">
            <%= link_to t("users.dropmenu.account"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.dropmenu.profile"), user_path(current_user) %></li>
              <li><%= link_to t("users.dropmenu.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.dropmenu.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>

        <% end %>
      </ul>
    </div>
  </nav>
</div>
